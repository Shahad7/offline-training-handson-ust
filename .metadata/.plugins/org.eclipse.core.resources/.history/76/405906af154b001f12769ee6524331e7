spring:
 application:
  name: gateway-lb-demo
  
#either this configuration for routes or the java configuration
 cloud:
  gateway:
   routes:
    - id: service1-lb-demo
      uri: lb://lb-service1
      predicates :
       - Path=/service1/**
  discovery:
   locator:
   enabled: true
      
    
     
    
    

management:
 endpoints:
  web:
   exposure:
    include: "*"
 endpoint: 
  health:
    show-details: always
  gateway:
   enabled: true
   
server:
 port: 8070